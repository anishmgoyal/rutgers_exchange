<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Exchange on the Banks, Easy on the Bank.</title>

		<!-- Favorite Icon -->
		<link rel="shortcut icon" type="image/png" href="img/favicon2.png?v=8" />

		<%= stylesheet_link_tag "application" %>
		<%= javascript_include_tag "application" %>

		<script type="text/javascript" src="/faye/client.js"></script>

	</head>
	<body>
		<div id="loadingIcon">LOADING</div>
		<div class="fixed">
			<nav id="nav">
				<div class="small-8 medium-3 large-2 columns">
					<img src="img/logo.png" class="logo" />
				</div>
				<div class="hide-for-small medium-9 large-10 columns">
					<form class="bigSearchForm search">
						<div class="row collapse">
								<div class="medium-11 large-10 columns">
									<input type="text" id="query" name="query" placeholder="Search" class="search" />
								</div>
								<div class="medium-1 large-2 columns">
									<button type="submit"><i class="fi-magnifying-glass"></i></button>
								</div>
						</div>
					</form>
				</div>
				<div class="show-for-small small-4 columns">
					<ul class="right click-grid">
						<li class="toggle-search"><i class="fi-magnifying-glass"></i></li>
						<li class="toggle-search-hide" style="display: none"><i class="fi-x"></i></li>
						<li class="toggle-menu"><i class="fi-list"></i></li>
						<li class="toggle-menu-hide" style="display: none"><i class="fi-x"></i></li>
					</ul>
				</div>
			</nav>
		</div>
		<div class="hide-for-small medium-3 large-2 columns sidebar-container">
			<div class="sidebar front-item" id="sidebar">
			</div>
		</div>
		<div class="show-for-small mobile-menu-container">
			<div class="mobile_menu mobile_menu_base" id="mobile_menu">
			</div>
		</div>
		<div class="small-12 medium-9 large-10 columns main-container front-item"></div>
	</body>
</html>
